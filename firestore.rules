
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Helper function to check if a user is an admin (SPT or JPT)
    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['SPT', 'JPT'];
    }
    
    // Helper function to check if a user is an SPT
    function isSpt() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'SPT';
    }

    // == USERS ==
    // A user can be created by any authenticated user, as long as the document ID matches their UID.
    // A user can read/update their own profile.
    // An SPT admin can read/update any user's profile.
    match /users/{userId} {
      allow read, update: if request.auth != null && (request.auth.uid == userId || isSpt());
      allow create: if request.auth != null && request.auth.uid == userId;
    }

    // == TASKS ==
    // Tasks can be read by any logged-in user.
    // Created by admins, updated by creator or assigned users.
    match /tasks/{taskId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && isAdmin();
      allow update: if request.auth != null && (
        resource.data.createdBy == request.auth.uid || // Creator can update
        request.auth.uid in resource.data.assignedTo // Assigned users can update
      );
      allow delete: if request.auth != null && isAdmin();
      
      // Messages subcollection within a task
      match /messages/{messageId} {
        allow read, write: if request.auth != null && (
          request.auth.uid == get(/databases/$(database)/documents/tasks/$(taskId)).data.createdBy ||
          request.auth.uid in get(/databases/$(database)/documents/tasks/$(taskId)).data.assignedTo ||
          isAdmin()
        );
      }
    }

    // == ANNOUNCEMENTS ==
    // Can be read by any logged-in user, but only created/managed by admins.
    match /announcements/{announcementId} {
      allow read: if request.auth != null;
      allow create, update, delete: if request.auth != null && isAdmin();
    }
    
    // == RESOURCES ==
    // Can be read by any logged-in user, but only created/managed by admins.
    match /resources/{resourceId} {
       allow read: if request.auth != null;
       // Create, update, delete allowed for admins. Comments can be written by any authenticated user.
       allow write: if request.auth != null && isAdmin();
       allow update: if request.auth != null; // Allow any authenticated user to add comments
    }

    // == PITCHES ==
    // Any authenticated user can read the list of pitches and update any pitch.
    // Create and delete are restricted to admins.
    match /pitches/{pitchId} {
      allow read, update: if request.auth != null;
      allow create, delete: if request.auth != null && isAdmin();
    }

    // == ADMIN-ONLY COLLECTIONS ==
    // Whitelist and Blacklist can only be accessed by SPTs
    match /whitelist/{email} {
      allow read, write: if request.auth != null && isSpt();
    }
    
    match /blacklist/{email} {
       allow read, write: if request.auth != null && isSpt();
    }

  }
}

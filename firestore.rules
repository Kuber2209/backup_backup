
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Helper function to get the requesting user's data
    function getRequestingUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    // Helper function to check if a user is an admin (SPT or JPT)
    function isAdmin() {
      return request.auth != null && getRequestingUserData().role in ['SPT', 'JPT'];
    }
    
    // Helper function to check if a user is an SPT (Super Admin)
    function isSpt() {
      return request.auth != null && getRequestingUserData().role == 'SPT';
    }

    // == USERS ==
    match /users/{userId} {
      // Allow creation if the user is creating their own document.
      allow create: if request.auth != null && request.auth.uid == userId;
      
      // Allow reading and updating if the user is accessing their own document OR is an SPT.
      allow read, update: if request.auth != null && (request.auth.uid == userId || isSpt());
    }

    // == TASKS ==
    // Tasks can be read by any logged-in user.
    // Created by admins, updated by creator or assigned users.
    match /tasks/{taskId} {
      allow read: if request.auth != null;
      allow create: if isAdmin();
      allow update: if request.auth != null && (
        resource.data.createdBy == request.auth.uid || // Creator can update
        request.auth.uid in resource.data.assignedTo || // Assigned users can update
        isAdmin() // Admins can update
      );
      allow delete: if isAdmin();
      
      // Messages subcollection within a task
      match /messages/{messageId} {
        allow read, write: if request.auth != null && (
          get(/databases/$(database)/documents/tasks/$(taskId)).data.createdBy == request.auth.uid ||
          request.auth.uid in get(/databases/$(database)/documents/tasks/$(taskId)).data.assignedTo ||
          isAdmin()
        );
      }
    }

    // == ANNOUNCEMENTS ==
    // Can be read by any logged-in user, but only created/managed by admins.
    match /announcements/{announcementId} {
      allow read: if request.auth != null;
      allow create, update, delete: if isAdmin();
    }
    
    // == RESOURCES ==
    // Can be read by any logged-in user.
    // Can be managed by admins.
    // Any authenticated user can add comments (by updating the document).
    match /resources/{resourceId} {
       allow read: if request.auth != null;
       allow create, delete: if isAdmin();
       allow update: if request.auth != null;
    }

    // == ADMIN-ONLY COLLECTIONS ==
    // Whitelist and Blacklist can only be accessed by SPTs
    match /whitelist/{email} {
      allow read, write: if isSpt();
    }
    
    match /blacklist/{email} {
       allow read, write: if isSpt();
    }

  }
}
